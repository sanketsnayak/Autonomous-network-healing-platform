# Autonomous Network Healing Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# For local development: mongodb://localhost:27017/autonomous-network-healing
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/autonomous-network-healing

# =============================================================================
# SERVER CONFIGURATION  
# =============================================================================
# Port for the Express server to listen on
PORT=5000

# Environment mode (development, production, test)
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret key for authentication (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# API rate limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# =============================================================================
# SNMP CONFIGURATION
# =============================================================================
# Default SNMP community string for device access
SNMP_COMMUNITY=public

# SNMP version (1, 2c, 3)
SNMP_VERSION=2c

# SNMP timeout in milliseconds
SNMP_TIMEOUT=5000

# SNMP retries
SNMP_RETRIES=3

# =============================================================================
# NETWORK DEVICE CREDENTIALS
# =============================================================================
# Default SSH username for device access
DEFAULT_SSH_USERNAME=admin

# Path to SSH private key directory
SSH_KEY_PATH=/opt/network-healing/keys

# Default device access timeout (seconds)
DEVICE_TIMEOUT=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email service provider (gmail, outlook, custom-smtp)
EMAIL_SERVICE=gmail

# Email credentials for sending notifications
EMAIL_USER=alerts@yourcompany.com
EMAIL_PASS=your-app-password-here

# SMTP configuration (if using custom SMTP)
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_SECURE=false

# Slack webhook URL for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams webhook URL (optional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR-TEAMS-WEBHOOK

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/app.log

# Maximum log file size (MB)
LOG_MAX_SIZE=10

# Maximum number of log files to keep
LOG_MAX_FILES=5

# Enable request logging (true/false)
LOG_REQUESTS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Telemetry collection interval (seconds)
TELEMETRY_INTERVAL=60

# Alert correlation window (seconds)
CORRELATION_WINDOW=300

# RCA analysis timeout (seconds)
RCA_TIMEOUT=120

# Maximum concurrent remediation actions
MAX_CONCURRENT_ACTIONS=5

# Database connection pool size
DB_POOL_SIZE=10

# =============================================================================
# AUTONOMOUS HEALING CONFIGURATION
# =============================================================================
# Enable automatic remediation (true/false)
AUTO_REMEDIATION_ENABLED=true

# Require approval for critical actions (true/false)
REQUIRE_APPROVAL_CRITICAL=true

# Maximum automatic remediation attempts per incident
MAX_AUTO_REMEDIATION_ATTEMPTS=3

# Cooldown period between remediation attempts (seconds)
REMEDIATION_COOLDOWN=1800

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Network monitoring system integration
NMS_API_URL=https://your-nms.company.com/api
NMS_API_KEY=your-nms-api-key

# ITSM system integration (ServiceNow, Jira, etc.)
ITSM_URL=https://your-itsm.company.com
ITSM_USERNAME=service-account
ITSM_PASSWORD=service-account-password

# Metrics collection endpoint (Prometheus, InfluxDB, etc.)
METRICS_ENDPOINT=http://prometheus:9090
METRICS_ENABLED=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable debug mode (additional logging and endpoints)
DEBUG_MODE=false

# Mock external services (true/false) - useful for testing
MOCK_EXTERNAL_SERVICES=false

# Simulate device responses (true/false) - for demo/testing
SIMULATE_DEVICE_RESPONSES=false

# WebSocket port for real-time updates
WEBSOCKET_PORT=5001

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Automatic database backup enabled (true/false)
AUTO_BACKUP_ENABLED=false

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention period (days)
BACKUP_RETENTION=30

# Backup storage path
BACKUP_PATH=/opt/network-healing/backups

# =============================================================================
# HEALTH & MONITORING
# =============================================================================
# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Service restart threshold (consecutive failures)
RESTART_THRESHOLD=3

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics retention period (days)
METRICS_RETENTION=7

# =============================================================================
# EXAMPLE VALUES FOR QUICK SETUP
# =============================================================================
# For quick local development, you can use these example values:
#
# MONGO_URI=mongodb://localhost:27017/autonomous-network-healing
# PORT=5000
# NODE_ENV=development
# JWT_SECRET=dev-secret-key-change-in-production
# LOG_LEVEL=debug
# AUTO_REMEDIATION_ENABLED=false
# MOCK_EXTERNAL_SERVICES=true
# SIMULATE_DEVICE_RESPONSES=true
