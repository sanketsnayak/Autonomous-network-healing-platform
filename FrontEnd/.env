# Frontend Environment Configuration
# Autonomous Network Healing Platform

# Backend API URL
VITE_API_URL=http://localhost:5000/api

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:5001

# Application settings
VITE_APP_NAME=Autonomous Network Healing Platform
VITE_APP_VERSION=1.0.0

# Development settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Chart refresh intervals (in milliseconds)
VITE_CHART_REFRESH_INTERVAL=30000
VITE_DASHBOARD_REFRESH_INTERVAL=15000

# UI Configuration
VITE_THEME=light
VITE_SIDEBAR_COLLAPSED=false

# Feature flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_REALTIME_UPDATES=true
